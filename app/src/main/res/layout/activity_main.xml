<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <!-- 上部のボタン -->
    <Button
        android:id="@+id/netflix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Netflix"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 隠れたメッセージ（背景色付き） -->
    <TextView
        android:id="@+id/hiddenMessageN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平均利用時間:/n あなたの利用時間:"
        android:visibility="gone"
        android:background="#FFDDC1"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/netflix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 下部のボタン -->
    <Button
        android:id="@+id/unext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="U-next"
        app:layout_constraintTop_toBottomOf="@id/hiddenMessageN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/hiddenMessageU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a hidden message"
        android:visibility="gone"
        android:background="#FFDDC1"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/unext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/disney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Disney+"
        app:layout_constraintTop_toBottomOf="@id/hiddenMessageU"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/hiddenMessageDi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a hidden message"
        android:visibility="gone"
        android:background="#FFDDC1"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/disney"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/spotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Spotify"
        app:layout_constraintTop_toBottomOf="@id/hiddenMessageDi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/hiddenMessageS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a hidden message"
        android:visibility="gone"
        android:background="#FFDDC1"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/spotify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/dazn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dazn"
        app:layout_constraintTop_toBottomOf="@id/hiddenMessageS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/hiddenMessageDa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a hidden message"
        android:visibility="gone"
        android:background="#FFDDC1"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/dazn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/applemusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Apple Music"
        app:layout_constraintTop_toBottomOf="@id/hiddenMessageDa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/hiddenMessageA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a hidden message"
        android:visibility="gone"
        android:background="#FFDDC1"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/applemusic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>